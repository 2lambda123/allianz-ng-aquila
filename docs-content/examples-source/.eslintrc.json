{
    "extends": "../../../../.eslintrc.json",
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "no-console": "off" // console output is ok in examples
            }
        },
        {
            "files": ["*.html"],
            "rules": {
                "@angular-eslint/template/accessibility-elements-content": "off" // conflicts with comparison-table select buttons
            }
        }
    ]
}
