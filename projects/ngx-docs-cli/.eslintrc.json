{
    "extends": "../../.eslintrc.json",
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "no-console": "off", // console output is ok for build tools

                "@typescript-eslint/no-var-requires": "off", // recommended overide: used frequently
                "@typescript-eslint/prefer-includes": "off" // not supported by tsconfig target of 'es5'
            }
        }
    ]
}
